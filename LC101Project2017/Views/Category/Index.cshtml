@model List<LC101Project2017.Models.RecipeCategory>

<h1>Categories</h1>

<ul>

    @foreach (var category in Model)
    {
        <li>
            <a asp-controller="Category"
               asp-action="ViewCategory"
              asp-route-id="@category.ID">@category.Name</a>
        </li>

    }
</ul>

<p><a asp-controller="Category" asp-action="Add">Add Categories</a>

@if (Model.Count == 0)
{
    <p>No recipe categories yet!</p>
}
